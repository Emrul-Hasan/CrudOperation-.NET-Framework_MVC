@model IEnumerable<LatestTask.Models.Company>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create","Companies")" class="btn btn-primary" target="_blank">
        <span class="glyphicon glyphicon-plus"></span>
    New Company
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capital)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <a href="@Url.Content(item.CUrl)" target="_blank"> @Html.DisplayFor(modelItem => item.CUrl)</a> 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Edate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capital)
        </td>
        <td>
            <img src="@Url.Content(item.Logo)" width="50" height="50" />
        </td>
        <td>
            <a href="@Url.Action("Edit","Companies",new { id = item.CID})" class="btn btn-success">
                 <span class="glyphicon glyphicon-ok"></span>
                 Edit
                </a> |
        |
            @Html.ActionLink("Delete", "Delete", new { id=item.CID },new { @class="btn btn-danger" })
        </td>
    </tr>
}

</table>

<div class="alert alert-warning">
    Count = @Html.Action("Count") <br />
    @*@Html.Action("Count", "Companies", new { id=1})*@
    @*@Html.Action("Count",new {id=5})*@
    Max = @Html.Action("Max") <br />
    Min = @Html.Action("Min") <br />
    Average = @Html.Action("Avg") <br />
</div>
